# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/client_onboarding
NEON_DATABASE_URL=postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require

# Application Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000/api

# YOLO Mode Configuration
YOLO_MODE_ENABLED=true
YOLO_SKIP_VALIDATION=true
YOLO_AUTO_APPROVE_CHANGES=true
YOLO_BYPASS_SAFETY_CHECKS=true
YOLO_FAST_DEPLOYMENT=true
YOLO_DEBUG_LEVEL=verbose

# Client Configuration
CLIENT_CONFIG_PATH=./config/clients.json
DEFAULT_CLIENT_ID=client-001

# Form Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_DIR=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_REPLY_TO=support@yourcompany.com

# Vendor Routing Configuration
VENDOR_ROUTING_ENABLED=true
ROUTING_LOG_LEVEL=info
AUTO_ESCALATION_ENABLED=true
ESCALATION_THRESHOLD_HOURS=24

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000

# File Storage Configuration
STORAGE_TYPE=local
# For AWS S3:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Development Tools
ENABLE_DEBUG_MODE=true
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/test_db
ENABLE_TEST_MODE=false

# Feature Flags
ENABLE_AI_CLASSIFICATION=true
ENABLE_EMAIL_TEMPLATES=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key-here
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token 